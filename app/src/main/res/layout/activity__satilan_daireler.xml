<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@drawable/grad_bg"
    android:animateLayoutChanges="true"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="2"
        >



        <TextView
            android:id="@+id/tv_daire1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:text="SATILAN DAİRELER"
            android:gravity="center"
            android:textColor="@color/colorWhite"
            android:textSize="30sp" />

        <LinearLayout
            android:id="@+id/linlay1"
            android:layout_below="@+id/tv_daire1"
            android:orientation="vertical"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-light"
                    android:text="Satılan Daire Sayısı"
                    android:textAllCaps="true"
                    android:textColor="@color/colorWhite"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/ed_username"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="5dp"
                    android:text="30 daire satılmıştır"
                    android:gravity="center_vertical"
                    android:background="@drawable/et_bg"
                    android:fontFamily="sans-serif-light"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:textColor="@color/colorWhite"
                    android:textSize="15sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SATILMAYAN DAİRE SAYISI"
                    android:textAllCaps="true"
                    android:textSize="15sp"
                    android:textColor="@color/colorWhite"
                    android:fontFamily="sans-serif-light"
                    />
                <TextView
                    android:id="@+id/ed_tel"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:textSize="15sp"
                    android:text="20 daire satılmamıştır"
                    android:gravity="center_vertical"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/colorWhite"
                    android:fontFamily="sans-serif-light"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:background="@drawable/et_bg"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SATILMASI İHTİMAL DAİRE SAYISI"
                    android:textAllCaps="true"
                    android:textSize="15sp"
                    android:textColor="@color/colorWhite"
                    android:fontFamily="sans-serif-light"
                    />
                <TextView
                    android:id="@+id/ed_email"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:textSize="15sp"
                    android:gravity="center_vertical"
                    android:text="28 daire satılmayı bekliyor"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/colorWhite"
                    android:fontFamily="sans-serif-light"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:background="@drawable/et_bg"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SATILMAYAN DAİRE SAYISI"
                    android:textAllCaps="true"
                    android:textSize="15sp"
                    android:textColor="@color/colorWhite"
                    android:fontFamily="sans-serif-light"
                    />
                <TextView
                    android:id="@+id/ed_email1"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:textSize="15sp"
                    android:gravity="center_vertical"
                    android:text="60 daire satılmamıştır"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/colorWhite"
                    android:fontFamily="sans-serif-light"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:background="@drawable/et_bg"
                    />
            </LinearLayout>

        </LinearLayout>







    </RelativeLayout>

</LinearLayout>
